@{
    ViewBag.Title = "Дать контроль за аудиторией";
    Layout = "_Layout";
}

<h2>Дать контроль за аудиторией</h2>

<form id="takeControlForm" action="@Url.Action("TakeControl", "Chief")" method="post">
    <div>
        <label for="classroomId">ID аудитории:</label>
        <input type="text" id="classroomId" name="classroomId" required>
    </div>
    <div>
        <label for="chiefId">ID следящего:</label>
        <input type="text" id="chiefId" name="chiefId" required>
    </div>
    <button type="submit">Дать контроль</button>
</form>

<div id="takeControlStatus"></div>