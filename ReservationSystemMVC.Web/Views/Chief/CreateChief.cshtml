@{
    ViewBag.Title = "Создание записи ответственного";
    Layout = "_Layout";
}

<h2>Создать запись ответственного</h2>

<form id="createChiefForm" action="@Url.Action("Create", "Chief")" method="post"> 
    <div>
        <label for="Name">Имя ответственного:</label>
        <input type="text" id="Name" name="Name" required>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required>
    </div>
    <button type="submit">Создать</button>
</form>

<div id="creationStatus"></div>