@{
    ViewBag.Title = "Создание записи студента";
    Layout = "_Layout";
}

<h2>Создать запись студента</h2>

<form id="createStudentForm" action="@Url.Action("Create", "Student")" method="post"> 
    <div>
        <label for="Name">Имя студента:</label>
        <input type="text" id="Name" name="Name" required>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required>
    </div>
    <button type="submit">Создать</button>
</form>

<div id="creationStatus"></div>